@using Entities
@using Business
@inject NavigationManager NavManager
    <EditForm Model="Warehouse">
        <div class="form-group">
            <label>Id:</label>
            <InputText @bind-Value="Warehouse.WarehouseId" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nombre:</label>
            <InputText @bind-Value="Warehouse.WarehouseName" class="form-control" />
        </div>
        <div class="form-group">
            <label>Dirección:</label>
            <InputText @bind-Value="Warehouse.WarehouseAddress" class="form-control" />
        </div>
        <input type="button" name="btnCreate" value="Registrar Bodega" @onclick="SaveChanges" />
    </EditForm>
@code {
    
    WarehouseEntity Warehouse = new WarehouseEntity();

    private void SaveChanges()
    {
        B_Warehouse.CreateWarehouse(Warehouse);
        NavManager.NavigateTo("warehouse/list");
    }

}
